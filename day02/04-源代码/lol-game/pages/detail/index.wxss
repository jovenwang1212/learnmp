page{
  background-color: #363636;
  color: #fff;
  font-size: 12px;
}

swiper image{
  width: 100%;
}

.content{
  display: flex;
  padding:12px 10px 0;
}

.content .left{
  width: 191px;
}

.content .right{
  flex:1;
}

.tags{
  margin:12px 0 18px;
}

.tags text{
  width: 30px;
  height: 22px;
  line-height: 22px;
  text-align: center;
  background-color: #029b7f;
  border-radius: 4px;
  margin-right: 4px;
  display: inline-block;
}

.title{
  font-size: 14px;
}
.name{
  font-size: 20px;
  margin-top:4px;
}

.ability .item{
  display: flex;
  margin-bottom: 4px;
}

progress{
  width:100px;
  margin-left:6px;
}