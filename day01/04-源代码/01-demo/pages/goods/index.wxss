page{
  display: flex;
  justify-content: center;
}
.goods{
  height:324px;
  width:234px;
  border:1px solid #666;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:0 22px;
}

image{
  width:150px;
  height:150px;
  margin:30px 0 42px;
}

.goods-name{
  color:#666;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size:12px;
  line-height: 23px;
}

.price{
  color: #e1251b;
  font-size:12px;
  margin-top:14px;
  text-align: left;
  width: 100%;
}
.price .num{
  font-size:18px;
}