page{
  display:flex;
  justify-content: center;
}

.goods {
  width: 234px;
  height: 324px;
  border: 1px solid #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30px 22px 0;
}

.goods image {
  width: 150px;
  height: 150px;
}

.goods-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 44px;
  color: #666;
  line-height: 32px;
}

.price {
  color: #e1251b;
  font-size: 12px;
  margin-top: 14px;
  text-align: left;
  /* width: 100%; */
  align-self: flex-start;
}

.price .num {
  font-size: 20px;
}
